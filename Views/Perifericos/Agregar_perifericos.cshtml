<style>
      *{
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
            font-family: sans-serif;
        }
      body{
          background-color:rgb(41, 43, 43);
          font-family: monospace;
      }  

      form{
        width: 450px;
        margin: auto;
        background: rgba(0,0,0,0.4);
        padding: 10px 20px;
        box-sizing: border-box;
        margin-top: 20px;
        border-radius: 7px;
      }

      h2{
              color: white;
              text-align: center;
              margin: 0;
              font-size: 30px;
              font-family: monospace;
              margin-bottom: 20px;
      }

      input, textarea{
              width: 100%;
              margin-bottom: 20px;
              padding: 7px;
              box-sizing: border-box;
              font-size: 17px;
              border: none;
      }

      textarea{
              min-height: 100px;
              max-height: 200px;
              max-width: 100%;
      }

      #boton{
           background: red;
           color: white;   
           padding: 15px;
      }
      .guardar{
              background: gray;
              color: white;
              padding: 7px;
              border: none;
      }
        .modal-content{
                background:  rgba(0,0,0,0.9);
                color: white;
        }
        .close{
                color: white;
        }     
</style>

<body>
        <form action="">
                <h2>REGISTRAR Perifericos</h2>
                <input type="text" name="ID Periferico" placeholder="ID del Periferico" pattern="[0-9]{9}"required>
                <input type="text" name="Nombre Periferico" placeholder="Nombre Periferico"pattern="[A-Za-z]{2-25}" required>
                <input type="url" name="Imagen Periferico" placeholder="Url de la imagen">
                <input type="text" name="Precio del Periferico" placeholder="Precio del Periferico"pattern="[0-9]{9}"required>
                <textarea name="Descripción Periferico" placeholder="Descripción Periferico"></textarea>
                <input type="button" data-toggle="modal" data-target="#miventana" value="Registrar" id="boton">
        </form>

        <div class="modal fade" id="miventana" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                        <div class="modal-content">
                                <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4>Lista de Perifericos</h4>
                                </div>
                                <div class="modal-body">
                                        <tr>
                                                <td>ID Perifericos</td>
                                                <td>Nombre Periferico</td>                                              
                                                <td>Imagen Periferico</td>
                                                <td>Precio Periferico</td>
                                                <td>Descripción Periferico</td>
                                        </tr>
                                </div>
                                <div class="modal-footer">
                                        <button type="button" class="guardar" data-dismiss="modal">Guardar</button>
                                </div>

                        </div>

                </div>
        </div>
</body>